{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/client\\main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Meteor Server",
      "cwd": "${workspaceRoot}/",
      "runtimeExecutable": "${workspaceRoot}/.meteor/local/dev_bundle/bin/npm",
      "restart": true,
      "timeout": 100000,
      "stopOnEntry": false,
      "runtimeArgs": [
        "run",
        "dev-debug"
      ],
      "sourceMaps": true,
      "protocol": "inspector",
      "port": 5959
    }
  ]
}